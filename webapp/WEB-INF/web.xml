<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>PhoneBook on Servlets</display-name>

  <servlet>
    <servlet-name>AddContactsServlet</servlet-name>
    <servlet-class>ru.academits.servlet.AddContactServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddContactsServlet</servlet-name>
    <url-pattern>/phonebook/add</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>phonebook.jsp</welcome-file>
  </welcome-file-list>
</web-app>

